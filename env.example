# Environment Variables for Career AI Agent
# Copy this file to .env and fill in your actual values

# Google AI Configuration (required for career intelligence and upskilling features)
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Google AI Model (optional, defaults to gemini-2.5-flash)
GOOGLE_MODEL=gemini-2.5-flash

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# spaCy Configuration (optional, defaults to en_core_web_sm)
SPACY_MODEL=en_core_web_sm
